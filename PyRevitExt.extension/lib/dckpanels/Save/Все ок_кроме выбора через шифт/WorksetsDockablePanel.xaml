<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      mc:Ignorable="av"
      Background="White">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Секция списка рабочих наборов -->
        <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Padding="12" 
                Background="White" Margin="0,0,0,10"
                Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Список рабочих наборов" 
                           FontWeight="SemiBold" FontSize="11" Margin="0,0,0,10"
                           Foreground="#666666"
                           Grid.Row="0"/>

                <Button x:Name="SelectClear" Content="Сбросить выбор" 
                        Click="select_clear_click" Padding="12,6"
                        Background="#E6E6E6" BorderBrush="#CCCCCC" BorderThickness="1"
                        HorizontalAlignment="Stretch" FontWeight="SemiBold" Margin="0,0,0,10"
                        Grid.Row="1"/>

                <Border BorderBrush="#E1E1E1" BorderThickness="1" CornerRadius="3"
                        Grid.Row="2">
                        <ListBox x:Name="WorksetsListBox" 
                                SelectionMode="Extended" 
                                Margin="0">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="1"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                                Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}" 
                                                VerticalAlignment="Center" 
                                                Margin="20,0,0,0" 
                                                FontWeight="SemiBold" 
                                                FontSize="11"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                </Border>

                <StackPanel Grid.Row="3" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="SelectHide" Content="Скрыть" 
                                Click="select_hide_click" Margin="0,0,8,0" Padding="15,8"
                                Background="#e3616e" Foreground="White" BorderThickness="0"
                                FontWeight="SemiBold"/>
                        <Button x:Name="SelectShow" Content="Показать" 
                                Click="select_show_click" Margin="8,0,0,0" Padding="15,8"
                                Background="#5F9EA0" Foreground="White" BorderThickness="0"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Секция пресетов -->
        <Border BorderBrush="#E1E1E1" BorderThickness="1" CornerRadius="4" Padding="12" 
                Background="#F9F9F9" Margin="0,0,0,0"
                Grid.Row="1">
            <StackPanel>
                <TextBlock Text="Готовые пресеты" 
                           FontWeight="SemiBold" FontSize="11" Margin="0,0,0,5"
                           Foreground="#666666"/>
                <TextBlock Text="Будут позже" 
                           FontStyle="Italic" Foreground="#999999" TextAlignment="Center"
                           FontSize="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>