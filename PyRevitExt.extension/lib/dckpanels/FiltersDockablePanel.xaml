                                              ClickMode="Press"
                                              Width="14" Height="14"
                                              Background="Transparent"
                                              BorderBrush="Transparent"
                                              Padding="0">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="Transparent">
                                                <Path x:Name="ExpandPath"
                                                      Data="M0,0 L0,8 L8,4 Z"
                                                      Fill="#666666"
                                                      Stretch="Uniform"
                                                      Margin="2"/>
                                            </Border>
