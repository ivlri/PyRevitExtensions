                                    </ToggleButton.Template>
                                </ToggleButton>
                            </Grid>

                            <!-- Ð¡Ð¾Ð´ÐµÑ€Ð¶Ð¸Ð¼Ð¾Ðµ ÑÐ»ÐµÐ¼ÐµÐ½Ñ‚Ð° -->
                            <Border x:Name="Bd"
